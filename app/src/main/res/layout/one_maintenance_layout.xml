<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
    android:id="@+id/maintenanceTitleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="@dimen/margin_size"
    android:layout_marginStart="@dimen/margin_size"
    android:layout_marginTop="@dimen/margin_size"
    android:textSize="@dimen/big_text" />

    <TextView
        android:id="@+id/maintenanceDaysLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        android:layout_marginTop="@dimen/margin_size"
        android:layout_marginBottom="@dimen/margin_size"
        android:layout_below="@+id/maintenanceTitleTextView"
        android:layout_alignLeft="@+id/maintenanceTitleTextView"
        android:layout_alignStart="@+id/maintenanceTitleTextView" />

    <Button
        android:id="@+id/doneButton"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_size"
        android:layout_marginRight="@dimen/margin_size"
        android:text="@string/done" />

</RelativeLayout>